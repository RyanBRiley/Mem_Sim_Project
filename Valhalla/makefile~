CC = g++
CFLAGS = -c -Wall
LDFLAGS = 
SRC = ./src
INC_DIR = ./include
SOURCES = ($(SRC)*.cpp)
#SOURCES = main.cpp hello.cpp factorial.cpp
OBJECTS = $(SOURCES:.cpp=.o)
EXECUTABLE = Memory_Simulator

all: $(SOURCES) $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS) 
	$(CC) $(LDFLAGS) $(OBJECTS) -o $@

.cpp.o:
	$(CC) $(CFLAGS) $< -o $@